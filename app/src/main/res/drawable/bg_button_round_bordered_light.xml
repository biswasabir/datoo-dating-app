<?xml version="1.0" encoding="utf-8"?>
<selector android:color="@color/highlight_light_ripple"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/cosmos_button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/black" />
            <stroke android:width="@dimen/cosmos_button_stroke_width" android:color="@color/white" />
            <corners android:radius="@dimen/cosmos_button_corner_radius" />
        </shape>
    </item>
</selector>