<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_light" />

    <TextView
        android:id="@+id/stats_followers_label"
        style="?attr/textStyleP1Gray60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/live_followers"
        app:layout_constraintBottom_toBottomOf="@+id/stats_separator_first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stats_followers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stats_followers"
        style="?attr/textStyleP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="0"
        app:layout_constraintBottom_toTopOf="@+id/stats_separator_first"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <View
        android:id="@+id/stats_separator_first"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_followers_label" />

    <TextView
        android:id="@+id/stats_viewers_label"
        style="?attr/textStyleP1Gray60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/live_views"
        app:layout_constraintBottom_toBottomOf="@+id/stats_separator_second"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stats_viewers"
        app:layout_constraintTop_toBottomOf="@+id/stats_separator_first" />

    <TextView
        android:id="@+id/stats_viewers"
        style="?attr/textStyleP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="0"
        app:layout_constraintBottom_toTopOf="@+id/stats_separator_second"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_separator_first"
        android:layout_marginRight="16dp" />

    <View
        android:id="@+id/stats_separator_second"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_viewers_label" />

    <TextView
        android:id="@+id/stats_streams_label"
        style="?attr/textStyleP1Gray60"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/live_streamings"
        app:layout_constraintBottom_toBottomOf="@+id/stats_separator_third"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stats_streams"
        app:layout_constraintTop_toBottomOf="@+id/stats_separator_second" />

    <TextView
        android:id="@+id/stats_streams"
        style="?attr/textStyleP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        tools:text="0"
        app:layout_constraintBottom_toTopOf="@+id/stats_separator_third"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_separator_second"
        android:layout_marginRight="16dp" />

    <View
        android:id="@+id/stats_separator_third"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_streams_label" />
</androidx.constraintlayout.widget.ConstraintLayout>
