<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/black">

    <com.angopapo.datooapp.modules.discretescrollview.DiscreteScrollView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:dsv_orientation="horizontal" />

    <LinearLayout
        android:id="@+id/own_photos_options"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="end">

        <TextView
            android:id="@+id/add_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:text="@string/add_photos"
            android:background="@drawable/bg_photos_options"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="4dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_more_white_24dp"
            android:textStyle="bold"
            android:background="@drawable/bg_photos_options_circle"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>