<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/filter_distance_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="?textAppearanceBody1"
            android:layout_gravity="start"
            android:id="@+id/rangeBarSectionDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/people_filter_distance" />

        <TextView
            android:textAppearance="?textAppearanceBody3GrayDim"
            android:layout_gravity="bottom|center|end"
            android:id="@+id/rangeBarDistanceLabel"
            tools:text="Up to 2 kilometers away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <com.angopapo.datooapp.modules.rangeBarView.RangeSeekBar
        android:id="@+id/rangeBar_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rsb_thumb_size="30dp"
        app:rsb_thumb_drawable="@drawable/range_thumb"
        app:rsb_progress_color="@color/colorPrimary"
        app:rsb_range_interval="4"
        app:rsb_progress_height="1dp"
        app:rsb_progress_radius="0.8dp"
        app:rsb_indicator_padding_left="0dp"
        app:rsb_indicator_padding_right="0dp"
        app:rsb_indicator_padding_top="0dp"
        app:rsb_indicator_padding_bottom="0dp"
        app:rsb_mode="single" />

</LinearLayout>