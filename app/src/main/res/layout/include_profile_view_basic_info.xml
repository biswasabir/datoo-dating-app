<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_basic_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_place_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_overlay"/>

    <LinearLayout
        android:id="@+id/view_name_section"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/vote_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameAndAge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            style="?attr/textStyleH2"
            android:fontFamily="@font/mabry_regular_pro"
            tools:text="Anjinha Real, 27"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/mabry"
            tools:text="Luanda"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/vote_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/dislikeBtn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_floating_action_chat" />

        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_floating_action_yes" />

    </LinearLayout>

</RelativeLayout>