<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/center_sheet_touch_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:soundEffectsEnabled="false"/>

    <FrameLayout
        android:id="@+id/design_center_sheet"
        style="@style/Widget.Design.CenterSheet.Modal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/center_sheet_margin"
        android:layout_marginRight="@dimen/center_sheet_margin"
        android:clickable="true"
        app:layout_behavior="@string/center_sheet_behavior"
        android:focusable="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>