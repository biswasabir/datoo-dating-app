    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="@string/basic_info_birthday"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/day_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="D"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/day_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/day_1"
                android:layout_toRightOf="@+id/day_1"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="D"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/days">

            <EditText
                android:id="@+id/month_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="M"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/month_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/month_1"
                android:layout_toRightOf="@+id/month_1"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="M"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/month"
            android:layout_toRightOf="@+id/month">

            <EditText
                android:id="@+id/year_1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Y"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/year_2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/year_1"
                android:layout_toRightOf="@+id/year_1"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Y"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/year_3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/year_2"
                android:layout_toRightOf="@+id/year_2"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Y"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

            <EditText
                android:id="@+id/year_4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/year_3"
                android:layout_toRightOf="@+id/year_3"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Y"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/gray" />

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_login_password_textInputLayout"
        style="@style/ErrorInHintTextInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signin_existing_password"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>
</merge>