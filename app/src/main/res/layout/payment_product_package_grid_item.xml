<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productListItem_paymentBox"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/payments_grid_selected_border">

    <TextView
        android:id="@+id/payment_product_grid_popular_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/payment_grid_popular_label"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="6dp"
        android:layout_centerHorizontal="true"
        android:text="@string/Payments_Most_Popular"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/payment_product_grid_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/payment_product_grid_unit"
        style="?attr/textStyleH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/payment_product_grid_popular_label"
        tools:text="550"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center" />

    <TextView
        android:id="@+id/payment_product_grid_name"
        style="?attr/textStyleP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_product_grid_unit"
        android:text="@string/credits_"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center" />

    <TextView
        android:id="@+id/payment_product_grid_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_product_grid_name"
        tools:text="9.99 AOA"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/grey_600"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/payment_product_grid_price"
        style="?attr/textStyleH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_product_grid_price_old"
        tools:text="9.99 AOA"
        android:layout_centerHorizontal="true"
        android:textColor="@color/generic_green"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal" />


    <ImageView
        android:id="@+id/payment_product_grid_selected_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_floating_action_ok__"
        android:layout_alignParentRight="true" />
</RelativeLayout>
